{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "properties-chemical.json",
	"title": "ANSIS Soil Chemical Property Schema",
	"description": "JSON Schema definitions of the complete list of soil chemical properties defined in the ANSIS Domain Ontology.",
	"$comment": "Derived from Soil Chemical Methods â€“ Australasia. (The 'Green Book'.)",
	"type": "object",
	"required": ["type"],
	"minProperties": 2,
	"additionalProperties": false,
	"properties": {
		"type": {
			"$ref": "./base.json#type",
			"const": "ansis:SoilChemicalObservations"
		},
		"acidNeutralisingCapacity": {
			"type": "array",
			"items": {
				"$ref": "#acidNeutralisingCapacity"
			}
		},
		"cationExchangeCapacity": {
			"type": "array",
			"items": {
				"$ref": "#cationExchangeCapacity"
			}
		}
	},
	"$defs": {
		"acidNeutralisingCapacity": {
			"$anchor": "acidNeutralisingCapacity",
			"@id": "ansis:acidNeutralisingCapacity",
			"title": "Acid neutralising capacity",
			"description": "Acid neutralising capacity (ANC BT) (CaCO3 equivalent)",
			"type": "object",
			"range@type": [
				"sosa:ObservableProperty",
				"qudt:QuantityValue"
			],
			"required": [
				"hasResult",
				"usedProcedure"
			],
			"properties": {
				"hasResult": {
					"required": [
						"value",
						"unit"
					],
					"properties": {
						"value": {
							"$ref": "./qudt.json#value"
						},
						"unit": {
							"$ref": "./qudt.json#unit",
							"const": "unit:PERCENT"
						}
					}
				},
				"usedProcedure": {
					"enum": [
						"scm:20H1"
					]
				},
				"resultTime": {
					"$ref": "./sosa.json#resultTime"
				},
                "qualityOfObservation": {
                	"$ref": "./sosa.json#qualityOfObservation"
                }
			}
		},
		"cationExchangeCapacity": {
			"$anchor": "cationExchangeCapacity",
			"@id": "ansis:cationExchangeCapacity",
			"title": "Cation exchange capacity (CEC).",
			"description": "",
			"type": "object",
			"range@type": [
				"sosa:ObservableProperty",
				"qudt:QuantityValue"
			],
			"required": [
				"hasResult",
				"usedProcedure"
			],
			"properties": {
				"hasResult": {
					"required": [
						"value",
						"unit"
					],
					"properties": {
						"value": {
							"$ref": "./qudt.json#value"
						},
						"unit": {
							"$ref": "./qudt.json#unit",
							"const": "unit:CentiMOL-PER-KiloGM"
						}
					}
				},
				"usedProcedure": {
					"enum": [
						"scm:15B1",
						"scm:15B2",
						"scm:15B3",
						"scm:15C1",
						"scm:15C2",
						"scm:15D1",
						"scm:15D2",
						"scm:15D3",
						"scm:15E1",
						"scm:15E2",
						"scm:15E3",
						"scm:15F3",
						"scm:15I1",
						"scm:15I2",
						"scm:15I3",
						"scm:15I4",
						"scm:15K1"
					]
				},
				"resultTime": {
					"$ref": "./sosa.json#resultTime"
				},
                "qualityOfObservation": {
                	"$ref": "./sosa.json#qualityOfObservation"
                }
			}
		}
	}
}