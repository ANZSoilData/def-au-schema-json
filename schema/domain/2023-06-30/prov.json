{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "prov.json",
    "title": "PROV Entity Schema",
    "description": "JSON Schema definitions of the PROV Ontology entities used by ANSIS.",
    "type": "object",
    "oneOf": [
        {"$ref": "#Organization"},
        {"$ref": "#Activity"},
        {"$ref": "#Agent"},
        {"$ref": "#Person"},
        {"$ref": "#Project"}
    ],
    "$defs": {
        "curiPrefix": {
            "prov": "http://www.w3.org/ns/prov#",
            "proj": "https://linked.data.gov.au/def/project#"
        },
        "Activity": {
            "$anchor": "Activity",
            "@id": "prov:Activity",
            "title": "PROV Activity",
            "description": "An activity is something that occurs over a period of time and acts upon or with entities; it may include consuming, processing, transforming, modifying, relocating, using, or generating entities.",
            "type": "object",
            "required": ["@type"],
            "properties": {
                "id": {"$ref": "./base.json#id"},
                "@type": {
                    "$ref": "./base.json#ld-type",
                    "const": "prov:Activity"
                },
                "relatedActivity": {"$ref": "./properties.json#relatedActivity"},
                "name": {"$ref": "./base.json#name"}
            },
            "additionalProperties": false
        },
        "Agent": {
            "$anchor": "Agent",
            "@id": "prov:Agent",
            "title": "PROV Agent",
            "description": "An agent is something that bears some form of responsibility for an activity taking place, for the existence of an entity, or for another agent's activity.",
            "type": "object",
            "required": ["@type"],
            "properties": {
                "id": {"$ref": "./base.json#id"},
                "@type": {
                    "$ref": "./base.json#ld-type",
                    "const": "prov:Agent"
                },
                "name": {"$ref": "./base.json#name"}
            },
            "additionalProperties": false
        },
        "Organization": {
            "$anchor": "Organization",
            "@id": "prov:Organization",
            "title": "PROV Organization",
            "description": "An organization is a social or legal institution such as a company, society, etc.",
            "type": "object",
            "required": ["@type"],
            "properties": {
                "id": {"$ref": "./base.json#id"},
                "@type": {
                    "$ref": "./base.json#ld-type",
                    "const": "prov:Agent"
                },
                "name": {"$ref": "./base.json#name"}
            },
            "additionalProperties": false
        },
        "Person": {
            "$anchor": "Person",
            "@id": "prov:Person",
            "title": "PROV Person",
            "description": "Person agents are people.",
            "type": "object",
            "required": ["@type"],
            "properties": {
                "id": {"$ref": "./base.json#id"},
                "@type": {
                    "$ref": "./base.json#ld-type",
                    "const": "prov:Agent"
                },
                "name": {"$ref": "./base.json#name"}
            },
            "additionalProperties": false
        },
        "Project": {
            "$anchor": "Project",
            "@id": "proj:Project",
            "title": "PROJ Project",
            "description": "A Project is a planned activity with a budget, a sponsor, and a leader.",
            "type": "object",
            "required": ["@type"],
            "properties": {
                "id": {"$ref": "./base.json#id"},
                "@type": {
                    "$ref": "./base.json#ld-type",
                    "const": "prov:Project"
                },
                "hasLeader": {"$ref": "#Organization"},
                "hasSponsor": {
                    "type": "array",
                    "items": {"$ref": "#Organization"}
                },
                "name": {"$ref": "./base.json#name"},
                "label": {"$ref": "./base.json#label"}
            },
            "additionalProperties": false
        }
    }
}