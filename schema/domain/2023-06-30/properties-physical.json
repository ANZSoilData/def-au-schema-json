			"range@type": [
				"sosa:ObservableProperty",
				"skos:Concept"
			],
			"required": [
				"hasResult",
				"usedProcedure"
			],
			"properties": {
				"hasResult": {
					"type": "object",
					"required": [
						"value",
						"unit"
					],
					"properties": {
						"value": {
							"$ref": "./qudt.json#value"
						},
						"unit": {
							"$ref": "./qudt.json#unit",
							"enum": [
								"unit:MilliGM-PER-M3",
								"unit:PERCENT"
							]
						}
					}
				},
				"usedProcedure": {
					"enum": [
						"spmile:503.06"
					]
				},
				"resultTime": {
					"$ref": "./sosa.json#resultTime"
				},
				"qualityOfObservation": {
					"$ref": "./sosa.json#qualityOfObservation"
				}
			}
		},
		"coarseFragments": {
			"$anchor": "coarseFragments",
			"@id": "nil:template",
			"title": "volume of coarse fragments",
			"description": "Volume of coarse fragments",
			"type": "object",
			"range@type": [
				"sosa:ObservableProperty",
				"skos:Concept"
			],
			"required": [
				"hasResult",
				"usedProcedure"
			],
			"properties": {
				"hasResult": {
					"type": "object",
