						"value",
						"unit"
					],
					"properties": {
						"value": {
							"$ref": "./qudt.json#value"
						},
						"unit": {
							"$ref": "./qudt.json#unit",
							"enum": [
								"unit:MilliGM-PER-M3",
								"unit:PERCENT"
							]
						}
					}
				},
				"usedProcedure": {
					"enum": [
						"spmile:503.07"
					]
				},
				"resultTime": {
					"$ref": "./sosa.json#resultTime"
				},
				"qualityOfObservation": {
					"$ref": "./sosa.json#qualityOfObservation"
				}
			}
		},
		"dispersion": {
			"$anchor": "dispersion",
			"@id": "nil:template",
			"title": "dispersion",
			"description": "Dispersion.",
			"type": "object",
			"range@type": [
				"sosa:ObservableProperty",
				"skos:Concept"
			],
			"required": [
				"hasResult",
				"usedProcedure"
			],
			"properties": {
				"hasResult": {
					"$ref": "./enum.json#dispersion-in-water"
				},
				"usedProcedure": {
					"enum": [
						"spmile:513.01"
					]
				},
				"resultTime": {
					"$ref": "./sosa.json#resultTime"
				},
				"qualityOfObservation": {
					"$ref": "./sosa.json#qualityOfObservation"
				}
			}
		},
		"clay": {
			"$anchor": "clay",
			"@id": "nil:template",
			"title": "proportion of clay",
			"description": "Proportion of clay - particle sizes < 0.002 mm.",
