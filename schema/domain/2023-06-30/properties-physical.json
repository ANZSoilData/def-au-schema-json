		"silt": {
			"$anchor": "silt",
			"@id": "nil:template",
			"title": "proportion of silt",
			"description": "Proportion of silt - particle sizes < 0.02 mm.",
			"type": "object",
			"range@type": [
				"sosa:ObservableProperty",
				"skos:Concept"
			],
			"required": [
