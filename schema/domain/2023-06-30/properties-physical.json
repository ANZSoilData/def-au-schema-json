						"spmile:516.01","spmile:517.02","spmile:517.03","spmile:517.04","spmile:517.05","spmile:517.06","spmile:517.07","spmile:517.08","spmile:517.09","spmile:517.10","spmile:517.11","spmile:517.12"
					]
				},
				"resultTime": {
					"$ref": "./sosa.json#resultTime"
				},
				"qualityOfObservation": {
					"$ref": "./sosa.json#qualityOfObservation"
				}
			}
		},
		"sand": {
			"$anchor": "sand",
			"@id": "nil:template",
			"title": "proportion of sand",
			"description": "Proportion of sand - particle sizes < 0.2 mm.",
			"type": "object",
			"range@type": [
				"sosa:ObservableProperty",
				"skos:Concept"
			],
			"required": [
				"hasResult",
				"usedProcedure"
			],
			"properties": {
				"hasResult": {
					"type": "object",
					"required": [
						"value",
