		"nil": "http://www.opengis.net/def/nil/OGC/0/",
		"qudt": "http://qudt.org/schema/qudt/",
		"spmile": "http://anzsoil.org/def/au/spm/spmile/",
		"sosa": "http://www.w3.org/ns/sosa/",
		"unit": "https://qudt.org/2.1/vocab/unit/"
	},
	"required": [
	],
	"minProperties": 1,
	"properties": {
		"bulkDensity": {
			"type": "array",
			"items": {
				"$ref": "#/$defs/bulkDensity"
			}
		},
		"coarseFragmentContent": {
			"type": "array",
			"items": {
				"$ref": "#/$defs/coarseFragmentContent"
			}
		},
		"coarseFragmentsVolume": {
